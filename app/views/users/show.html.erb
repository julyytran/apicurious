<div class="container text-center">

<div class ="my-info">
<h1><%= current_user.nickname %>'s Info</h1>
<img src= "<%= current_user.image %>" height="200px">
</div>

<div class = "vertical-buffer">
<h3>Followers: <%= @followers.count %></h3>
<% @followers.each do |follower| %>
<div class = "follow">
   <%= follower.login %>
 </div>
<% end %>
</div>

<div class = style="margin-vertical:100px">
<h3>Following: <%= @following.count %></h3>
<% @following.each do |following| %>
  <%= following.login %>
<% end %>
</div>

<div class = "vertical-buffer">
<h3>Starred Repos: <%= @starred.count %> </h3>
<% @starred.each do |repo| %>
  <%= repo.full_name %>
<% end %>
</div>

<div class = "vertical-buffer">
<h3>Organizations: <%= @organizations.count %> </h3>
<% @organizations.each do |org| %>
  <%= org.login %>
<% end %>
<div>

<div class = "vertical-buffer">
<h3>My Repositories: <%= @repositories.count %></h3>
<% @repositories.each do |repo| %>
<div class= "col-xs-12 col-sm-6 col-md-4 col-lg-3">
  <%= repo.name %>
</div>
<% end %>
</div>
